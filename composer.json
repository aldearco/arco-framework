{
    "name": "aldearco/arco",
    "description": "Simple PHP framework inspired by Laravel",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Arco\\": "src/",
            "App\\": "app/"
        },
        "files": [
            "src/Helpers/app.php",
            "src/Helpers/http.php",
            "src/Helpers/string.php",
            "src/Helpers/session.php",
            "src/Helpers/auth.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Arco\\Tests\\": "tests"
        }
    },
    "scripts": {
        "tests": "phpunit --color=always --testdox -v tests/",
        "php-cs-fixer": "php-cs-fixer fix --diff"
    },
    "authors": [
        {
            "name": "aldearco",
            "email": "albertodelarco@outlook.com"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "friendsofphp/php-cs-fixer": "^3.13"
    },
    "require": {
        "vlucas/phpdotenv": "^5.5",
        "symfony/console": "^6.2"
    }
}
